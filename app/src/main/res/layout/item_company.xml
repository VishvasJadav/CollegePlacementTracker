<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/teal_200"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/companyNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Company Name"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jobRoleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Job Role"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/packageTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12.0 LPA"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Bangalore"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/eligibilityTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Min CGPA: 7.0 | CSE, IT, ECE"
                android:textColor="@android:color/darker_gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/companyTypeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_button_primary"
                android:backgroundTint="@color/package_low_light"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="Product"
                android:textColor="@color/package_low"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/deadlineTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Apply by: 31/12/2024"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/employeesCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:drawableStart="@drawable/ic_companies"
                android:drawablePadding="4dp"
                android:text="500+ employees"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Professional Insights -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/workFromHomeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_button_primary"
                android:backgroundTint="@color/success_green_light"
                android:drawableStart="@drawable/ic_home"
                android:drawablePadding="4dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="WFH"
                android:textColor="@color/success_green"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/learningOpportunitiesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_button_primary"
                android:backgroundTint="@color/primary_blue_light"
                android:drawableStart="@drawable/ic_analytics"
                android:drawablePadding="4dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="Learning"
                android:textColor="@color/primary_blue"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/growthPotentialTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_primary"
                android:backgroundTint="@color/warning_orange_light"
                android:drawableStart="@drawable/ic_profile"
                android:drawablePadding="4dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="Growth"
                android:textColor="@color/warning_orange"
                android:textSize="11sp" />
        </LinearLayout>

        <Button
            android:id="@+id/applyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="Apply Now"
            android:textSize="14sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>